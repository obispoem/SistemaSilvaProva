<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/db_emanuel_silva?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping class="bean.EbsUsuario"/>
    <mapping class="bean.EbsCategoria"/>
    <mapping class="bean.EbsCompraProdutoId"/>
    <mapping class="bean.EbsProduto"/>
    <mapping class="bean.EbsTransportadora"/>
    <mapping class="bean.EbsFornecedor"/>
    <mapping class="bean.EbsCompra"/>
    <mapping class="bean.EbsCompraProduto"/>
  </session-factory>
</hibernate-configuration>
